{
  "name": "with-fwmc",
  "version": "0.2.1",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "author": "snoyw",
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/snowydqys/With-FUWAMOCO#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snowydqys/With-FUWAMOCO.git"
  },
  "bugs": {
    "url": "https://github.com/snowydqys/With-FUWAMOCO/issues"
  },
  "keywords": [
    "fuwamoco",
    "fwmc",
    "hololive",
    "web-extension"
  ],
  "scripts": {
    "compile": "rm -r dist ; webpack --config webpack.config.js",
    "build": "NODE_ENV=production pnpm run compile && web-ext build --source-dir=dist --overwrite-dest",
    "build:chrome": "TARGET_BROWSER=chrome WEB_EXT_ARTIFACTS_DIR='web-ext-artifacts/chrome' pnpm run build",
    "build:firefox": "TARGET_BROWSER=firefox WEB_EXT_ARTIFACTS_DIR='web-ext-artifacts/firefox' pnpm run build",
    "build:both": "pnpm run build:chrome && pnpm run build:firefox",
    "lint": "eslint --ext .ts,.js src",
    "lint:fix": "eslint --ext .ts,.js src --fix",
    "watch": "NODE_ENV=development rm -r dist ; webpack --config webpack.config.js --watch",
    "webext": "web-ext --source-dir=dist"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/chrome": "^0.1.1",
    "@types/firefox-webext-browser": "^120.0.4",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "daisyui": "^5.0.50",
    "eslint": "^9.32.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "web-ext": "^8.9.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
